<widget  xmlns     = 'http://www.w3.org/ns/widgets'
        xmlns:gap = 'http://phonegap.com/ns/1.0'
		id="ABC" version="1.0">

	<name>TestPush</name>
	<description>Test push plugin notifications</description>
	<author>SMMM</author>	<gap:platforms>
		<gap:platform name="ios" />
